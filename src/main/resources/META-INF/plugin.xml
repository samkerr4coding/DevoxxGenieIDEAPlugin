<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>

    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.axa.jetbrains</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>DevoxxGenie</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="samir.kerroumi@axa.fr">Axa</vendor>

    <idea-version since-build="233"/>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
        <p>Axa AI for IDEA Plugin</p>

        <h3>Key Features</h3>
        <UL>
            <LI>Dedicated to internal AI systems</LI>
            <LI>User defined prompts for selected code snippets</LI>
        </UL>
        <h3>Set-Up</h3>
        <UL>
            <LI>Install the plugin</LI>
            <LI>Make sure you have Credentials</LI>
            <LI>Start using the plugin</LI>
        </UL>
    ]]></description>


    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">

        <projectConfigurable parentId="tools"
                             id="com.axa.jetbrains.plugin"
                             instance="com.axa.jetbrains.ui.settings.llm.LLMProvidersConfigurable"
                             displayName="DevoxxGenie"/>

        <projectConfigurable id="com.axa.jetbrains.LLMSettings"
                             parentId="com.axa.jetbrains.plugin"
                             instance="com.axa.jetbrains.ui.settings.llmconfig.LLMConfigSettingsConfigurable"
                             displayName="LLM Settings"/>

        <projectConfigurable id="com.axa.jetbrains.PromptSettings"
                             parentId="com.axa.jetbrains.plugin"
                             instance="com.axa.jetbrains.ui.settings.prompt.PromptSettingsConfigurable"
                             displayName="Prompts"/>

        <projectConfigurable id="com.axa.jetbrains.CopyProjectSettings"
                             parentId="com.axa.jetbrains.plugin"
                             instance="com.axa.jetbrains.ui.settings.copyproject.CopyProjectSettingsConfigurable"
                             displayName="Scan &amp; Copy Project"/>

        <projectConfigurable id="com.axa.jetbrains.DiffSettings"
                             parentId="com.axa.jetbrains.plugin"
                             instance="com.axa.jetbrains.ui.settings.gitdiff.GitDiffSettingsConfigurable"
                             displayName="LLM Git Diff View"/>

        <projectConfigurable id="com.axa.jetbrains.llmfeatures"
                             parentId="com.axa.jetbrains.plugin"
                             instance="com.axa.jetbrains.ui.settings.costsettings.LanguageModelCostSettingsConfigurable"
                             displayName="Token Cost &amp; Context Window"/>

        <toolWindow id="DevoxxGenie"
                    anchor="right"
                    icon="/icons/pluginIcon.svg"
                    factoryClass="com.axa.jetbrains.ui.AxaAIToolWindowFactory"/>

        <applicationService serviceImplementation="com.axa.jetbrains.ui.settings.DevoxxGenieStateService"/>
        <applicationService serviceImplementation="com.axa.jetbrains.service.ConversationStorageService"/>
        <applicationService serviceImplementation="com.axa.jetbrains.service.PromptExecutionService"/>
        <applicationService serviceImplementation="com.axa.jetbrains.service.ChatMemoryService"/>
        <applicationService serviceImplementation="com.axa.jetbrains.service.MessageCreationService"/>
        <applicationService serviceImplementation="com.axa.jetbrains.service.LLMProviderService"/>
        <applicationService serviceImplementation="com.axa.jetbrains.service.PropertiesService"/>
        <applicationService serviceImplementation="com.axa.jetbrains.service.projectscanner.ProjectScannerService"/>
        <applicationService serviceImplementation="com.axa.jetbrains.service.ProjectContentService"/>
        <applicationService serviceImplementation="com.axa.jetbrains.service.TokenCalculationService"/>
        <applicationService serviceImplementation="com.axa.jetbrains.service.gitdiff.GitMergeService"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="com.axa.jetbrains.notifications" displayType="BALLOON" />
        <postStartupActivity implementation="com.axa.jetbrains.service.PostStartupActivity"/>
    </extensions>

    <actions>

        <action id="AddSnippetAction"
                class="com.axa.jetbrains.action.AddSnippetAction"
                text="Add To Prompt Context"
                icon="/icons/pluginIcon.svg"
                description="Add code snippet to context window">
            <add-to-group group-id="EditorPopupMenu" anchor="last" />
        </action>

        <action id="AddFilesAction"
                class="com.axa.jetbrains.action.AddFileAction"
                text="Add File(s) To Prompt Context"
                icon="/icons/pluginIcon.svg"
                description="Add file(s) to the prompt context">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>

        <action id="AddDirectoryToContextWindow"
                class="com.axa.jetbrains.action.AddDirectoryAction"
                text="Add Directory to Prompt Context"
                icon="/icons/pluginIcon.svg"
                description="Add the selected directory to the context window">
            <add-to-group group-id="ProjectViewPopupMenu"/>
        </action>

        <action id="CopyDirectoryToClipboard"
                class="com.axa.jetbrains.action.AddDirectoryAction"
                text="Copy Directory to Clipboard"
                icon="/icons/pluginIcon.svg"
                description="Copy the selected directory content to clipboard">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="AddDirectoryToContextWindow"/>
        </action>

        <action id="CalcTokenDirectory"
                class="com.axa.jetbrains.action.CalcTokensForDirectoryAction"
                text="Calc Tokens for Directory"
                icon="/icons/pluginIcon.svg"
                description="Calculate the tokens for selected directory">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="CopyDirectoryToClipboard"/>
        </action>

    </actions>
</idea-plugin>
